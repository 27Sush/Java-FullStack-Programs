<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	
	<bean id="mypassenger" class="com.jsp.Passenger">
	<constructor-arg name="name" value="Sush"></constructor-arg>
	<constructor-arg name="gender" value="Alpha Male"></constructor-arg>
	</bean>
	
	<bean id="myBus" class="com.jsp.Bus">
	<constructor-arg name="busno" value="15"></constructor-arg>
	<constructor-arg name="droploc" value="Pune"></constructor-arg>
	<constructor-arg name="price" value="620"></constructor-arg>
	<constructor-arg name="passenger" ref="mypassenger"></constructor-arg>	
	</bean>

</beans>